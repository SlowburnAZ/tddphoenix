<%= content_tag(:h1, id: "chat-room-name", data: [role: "room-title", chat_room_name: @chat_room.name]) do %>
    <%= @chat_room.name %>
<% end %>

<div>
    <ul data-role="messages">
    </ul>
</div>

<%= form_for @conn, "#", [id: "new-message-form"], fn f -> %>
    <label>
        New Message <%= text_input f, :message %>
    </label>

    <%= submit "Send" %>
<% end %>
